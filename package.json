{
  "name": "gotpop-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build --turbopack",
    "prebuild": "yarn generate-types",
    "dev:https": "yarn dev & yarn dev:wait && yarn proxy",
    "dev:wait": "sleep 3",
    "dev": "next dev --turbopack",
    "docker:build": "docker build --build-arg STORYBLOK_ACCESS_TOKEN=$STORYBLOK_ACCESS_TOKEN -t gotpop-blog .",
    "docker:run": "docker run -d -p 3000:3000 --env-file .env.production --name gotpop-blog gotpop-blog",
    "docker:stop": "docker stop gotpop-blog && docker rm gotpop-blog",
    "docker:dev": "docker-compose up --build",
    "docker:logs": "docker logs gotpop-blog -f",
    "format:check": "npx biome check src/ scripts/ next.config.ts && prettier --check \"src/**/*.css\"",
    "format:fix": "npx biome check --write src/ scripts/ next.config.ts && prettier --write \"src/**/*.css\"",
    "generate-types": "node scripts/generate-storyblok-types.js",
    "kill-ports": "./scripts/kill-ports.sh",
    "lint": "npx biome lint src/ scripts/ next.config.ts",
    "lint:fix": "npx biome lint --write src/ scripts/ next.config.ts",
    "proxy": "./scripts/start-proxy.sh",
    "setup-https": "./scripts/setup-https.sh",
    "start": "next start",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "dependencies": {
    "@storyblok/react": "^5.4.14",
    "@storyblok/richtext": "^3.8.2",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "server-only": "^0.0.1",
    "storyblok-rich-text-react-renderer": "^3.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "storyblok": "^4.6.9",
    "storyblok-generate-ts": "^2.2.0",
    "typescript": "^5"
  },
  "storyblok": {
    "token": "env:STORYBLOK_ACCESS_TOKEN",
    "space": "auto",
    "componentsPath": "src/types/storyblok-components.ts",
    "componentsDirectory": "src/components/storyblok"
  },
  "storyblok-generate-ts": {
    "oauthToken": "env:STORYBLOK_ACCESS_TOKEN",
    "componentsPath": "./components.json",
    "path": "./src/types/storyblok-components.ts",
    "componentNameSuffix": "Storyblok",
    "internalLinksAsStrings": false,
    "resolveRelations": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 80,
    "arrowParens": "always"
  }
}
